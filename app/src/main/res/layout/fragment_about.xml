<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xheader_bg"
    android:paddingTop="64dp"
    android:paddingLeft="@dimen/nav_header_vertical_spacing"
    android:paddingRight="@dimen/nav_header_vertical_spacing"
    tools:context=".AboutFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/aboutImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:background="@drawable/cover1" />

        <TextView
            android:id="@+id/vision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমাদের ভিশন" />

        <TextView
            android:id="@+id/visionMultiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="ক্রেতার চাহিদা অনুযায়ী প্রত্যাশিত মূল্যে পণ্য ও সেবা প্রদানের মাধ্যমে রানারকে একটি আস্থাভাজন প্রতিষ্ঠানে প্রতিষ্ঠিত করবো "
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/mission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমাদের মিশন " />

        <TextView
            android:id="@+id/missionMultiText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমরা পরিবেশবান্ধব প্রযুক্তির মাধ্যমে প্রত্যাশিত পণ্য ও সেবা প্রদান করে আমাদের ব্র্যান্ডকে প্রতিষ্ঠিত করবো | আমরা ক্রেতা সন্তুষ্টি ও সংশ্লিষ্ট অংশীদারদের স্বার্থ সংরক্ষণ করবো |  "
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/missionMultiText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমাদের স্বপ্ন বাস্তবায়নে আমরা দক্ষ ও যোগ্য মানবসম্পদের মাধ্যমে একটি উচ্চ উৎপাদনশীল লাগসই প্রযুক্তি কার্যকর করবো |"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/missionMultiText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমরা গ্রাহকের প্রত্যাশার উর্ধে গিয়ে একটি সুন্দর বাসযোগ্য পৃথিবী তৈরী করবো |"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/sense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমাদের মূল্যবোধ " />

        <TextView
            android:id="@+id/senseMultiText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="ক্আমরা ক্রেতার অনুভূতিকে সম্মান করি |"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/senseMultiText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমরা ওক্কবদ্ধ দোল হিসেবে লক্ষ্য অর্জন করি এবং সাফল্য উদযাপন করি |"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/senseMultiText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কোনো অপচয় আমাদের কাছে গ্রহণযোগ্য নয়|"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/senseMultiText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="কখনোই আমরা আত্মসন্তুষ্ট হই না |"
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/senseMultiText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমরা নিজ দায়িত্ব উপভোগ করি "
            android:textColor="@android:color/white" />
        <TextView
            android:id="@+id/senseMultiText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            android:text="আমরা সমাজ ও পরিবেশ সচেতনতাই বিস্বাসী |"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>