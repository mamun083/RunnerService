<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MechanicmapActivity" >
    <fragment
        android:id="@+id/mechanicmapService"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/BottomNav"
        map:itemBackground="@color/colorPrimary"
        map:itemIconTint="@drawable/nav_section"
        map:itemTextColor="@drawable/nav_section"
        map:menu="@menu/bottom_menu" />
</RelativeLayout>